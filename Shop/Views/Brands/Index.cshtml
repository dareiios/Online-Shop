@model IEnumerable<Brands>
    <link rel="stylesheet" href="~/css/CardBrand.css" />

    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="card">
                    <a class="btn" asp-controller="Brands" asp-action="Details" asp-route-id="@item.Id"> <img class="card-img" src="@item.Image" /></a>
                    <div class="card-title text-center">@item.Title</div>
                    <div class="card-describe">
                        @item.Description
                    </div>
                    <div class="btn-keeper">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                        {
                            <a asp-controller="Brands" asp-action="Edit" asp-route-id="@item.Id" class="btn">Edit</a><br />
                            <form asp-action="Delete" method="post" asp-controller="Brands">
                                <input type="hidden" value="@item.Id" name="id" />
                                <input type="submit" value="Delete" class="btn" />
                            </form>
                        }
                    </div>

                </div>
            }
        </div>
        @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
        {
            <center>
                <a type="button" class="btn" asp-controller="Brands" asp-action="Create">Добавить бренд</a>
            </center>
        }
    </div>




